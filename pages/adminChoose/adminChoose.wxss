  color: white;
  height: 70rpx;
  line-height: 70rpx;
}

.table {
  border: 0px solid darkgray;
}

.table1 {
  border: 0px solid darkgray;
  padding-top: 70rpx;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
