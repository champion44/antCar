/* pages/my/my.wxss */

.mainContainer {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: rgb(239, 239, 239);
}

.user-info {
 
  box-sizing: border-box;
  width: 750rpx;
  height: 400rpx;
  padding: 30rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  background-color: rgb(248, 151, 68);
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  color: #666;
}

.user-nickname {
  color: #fff;
  font-size: 40rpx;
  text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.6);
}

.user-sex-male, .user-sex-female {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  margin-bottom: -5rpx;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}

.user-sex-male {
  background-image: url(data:image/png;base64,);
}

.user-sex-female {
  background-image: url(data:image/png;base64,);
}

.user-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 200rpx;
  box-shadow: 0 0 300rpx 100rpx rgba(255, 255, 255, 0.2), 0 1px 0 rgba(255, 255, 255, 0.4);
}

.user-location {
  font-size: 24rpx;
  color: #eee;
  text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.6);
}

.abouts {
  margin-top: 20rpx;
  background-color: white;
  width: 100%;
}

.abouts image {
  height: 50rpx;
  width: 50rpx;
  float: right;
  margin-right: 30rpx;
  margin-top: 20rpx;
}

.icon {
  font-size: 50rpx;
  color: gray;
  margin-left: 10rpx;
}

.about {
  font-family: STXihei, "华文细黑", "Microsoft YaHei", "微软雅黑";
  font-size: 35rpx;
  line-height: 90rpx;
  margin-top: 15rpx;
  border-bottom: 1px solid rgb(239, 239, 239);
}

.about text {
  margin: 20rpx;
  vertical-align: middle;
}
