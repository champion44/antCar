/* pages/cardDetail/cardDetail.wxss */

.memberCard {
  margin-top: 5%;
  width: 90%;
  border-radius: 15rpx;
  height: 400rpx;
  border: 2rpx solid lightgray;
}

.number {
  position: absolute;
  top: 39%;
  left: 70%;
}

.cardNum {
  display: flex;
  flex-direction: row;
 padding-left: 15rpx;
  justify-content: space-between;
  box-sizing: border-box;
  position: absolute;
  top: 39%;
}
.star{
  font-size: 50rpx;
  color: white;
}
.cardNum text{
  margin:0 30rpx;
}
.timeRow {
  position: absolute;
  top: 45.5%;
  left: 33%;
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
  color: lightgrey;
}
.validateDate{
position: absolute;
  top: 45.5%;
  left: 12%;
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
}
.firstGet {
}

.expire {
}

.line {
  margin-top: 8%;
  width: 80%;
  border-bottom: 1px solid lightgray;
}

.notVip text {
  display: flex;
  flex-direction: column;
  width: 80%;
}

.notice {
  color: #f2c866;
  text-align: center;
  left: 10%;
  margin-top: 10rpx;
  position: absolute;
  display: block;
}

.title {
  color: lightgrey;
  font-size: 30rpx;
  position: absolute;
  left: 10%;
  top: 63%;
}

.way1 {
  position: absolute;
  left: 10%;
  top: 66%;
  color: #f2c866;
}

.way2 {
  position: absolute;
  left: 10%;
  top: 75%;
  color: #f2c866;
}

.btns {
  display: flex;
  flex-direction: row;
  position: absolute;
  top: 90%;
  left: 0%;
  width: 750rpx;
}

.btns button {
  color: white;
  background-color: #f2c866;
  width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
}
