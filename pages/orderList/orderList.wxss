/* pages/orderList/orderList.wxss */
@import '../../pages/my/my.wxss';

.boss {
  background-color: rgb(239, 239, 239);
}

.user-info {
  box-sizing: border-box;
  width: 750rpx;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  background-color: white;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  color: #666;
}

.user-nickname {
  color: #f89744;
  font-size: 40rpx;
}
.noData{
  margin-top: 12rpx;
  width: 100%;
  height: 300rpx;
  padding-top: 130rpx;
  background-color: white;
}
.logo {
  width: 50rpx;
  height: 50rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.storeImg {
  width: 260rpx;
  height: 170rpx;
  border-radius: 10rpx;
}

.list {
  margin-top: 20rpx;
  background-color: white;
  height: 270rpx;
}

.top text {
  position: absolute;
  text-align: center;
  color: grey;
  padding-top: 25rpx;
  font-size: 33rpx;
}
.refund{
  position: relative;
  margin-top: -75rpx;
  margin-left: 72%;
line-height:70rpx;
  width: 200rpx;
  height: 70rpx;
  font-size: 31rpx;
  color:  white;
  background-color:  #F89744;
}

.mid {
  margin-left: 30rpx;
  display: flex;
  margin-top: 15rpx;
  flex-direction: row;
}

.column {
  display: flex;
  flex-direction: column;
  margin-left: 10%;
  margin-top: 4%;
}

.mid text {
  color: gray;
  font-size: 35rpx;
}

.oriPrice {
  text-decoration: line-through;
}
